<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="1.0">
  <persistence-unit name="user_repository" transaction-type="RESOURCE_LOCAL">
    <class>com.apress.javaee6.chapter02.Book</class>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/users"/>
      <property name="javax.persistence.jdbc.user" value="userdb"/>
      <property name="javax.persistence.jdbc.password" value="userdb"/>
    </properties>
  </persistence-unit>
</persistence>        
